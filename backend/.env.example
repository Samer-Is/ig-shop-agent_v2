# IG-Shop-Agent V2 Environment Configuration
# Ultra Low-Cost Instagram DM Automation Platform

# Application Configuration
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000
SECRET_KEY=your-super-secret-key-change-in-production

# Database Configuration (PostgreSQL + pgvector)
DATABASE_URL=postgresql://username:password@localhost:5432/igshop_v2

# OpenAI Configuration (Direct API for cost optimization)
OPENAI_API_KEY=your_openai_api_key_here

# Meta/Instagram Configuration
META_APP_ID=your_facebook_app_id
META_APP_SECRET=your_facebook_app_secret
META_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# Azure Configuration (Minimal for cost savings)
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...

# Optional: Advanced Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
MAX_CONVERSATION_HISTORY=10

# Feature Flags (Cost Control)
ENABLE_VOICE_TRANSCRIPTION=false
ENABLE_ADVANCED_ANALYTICS=false
ENABLE_FILE_UPLOAD=true

# Azure Configuration
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id
AZURE_RESOURCE_GROUP=InstagramAIAgent-dev-rg
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# Database Configuration
DATABASE_CONNECTION_STRING=AccountEndpoint=https://your-cosmos.documents.azure.com:443/;AccountKey=your-key;

# Azure OpenAI Configuration
OPENAI_ENDPOINT=https://your-openai.openai.azure.com/
OPENAI_DEPLOYMENT_NAME=gpt-4o
OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRATION=24h

# Server Configuration
NODE_ENV=development

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# Logging
LOG_LEVEL=debug 